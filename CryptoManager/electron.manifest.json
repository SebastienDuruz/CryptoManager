{
  "executable": "CryptoManager",
  "splashscreen": {
    "imageFile": "/wwwroot/favicon.ico"
  },
  "name": "CryptoManager",
  "author": "Sébastien Duruz",
  "singleInstance": true,
  "build": {
    "appId": "com.CryptoManager.app",
    "productName": "CryptoManager",
    "copyright": "Copyright Sébastien Duruz © 2022",
    "buildVersion": "0.0.4",
    "compression": "maximum",
    "win": {
      "publish": [
        {
          "provider": "github",
          "owner": "SebastienDuruz",
          "repo": "CryptoManager"
        }]
      },
    "linux":{
      "target": ["deb", "rpm", "AppImage", "zip"],
      "maintainer": "Sébastien Duruz",
      "publish": [
      {
        "provider": "github",
        "owner": "SebastienDuruz",
        "repo": "CryptoManager"
      }]
    },
    "directories": {
      "output": "../../../Publish"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*"]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}